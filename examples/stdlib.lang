(package std)

(defoutput p2pkh (sig pubkey)
    (raw OP_DUP OP_HASH160)
    (hash160 pubkey)
    (raw OP_EQUALVERIFY OP_CHECKSIG))

(defoutput p2pk (sig pubkey)
    (raw OP_CHECKSIG))

(defoutput [sig pubkey] p2sh (sig pubkey)
    (raw
        (raw OP_DUP OP_HASH160)
        (pushdata
            (hash160 pubkey))))
